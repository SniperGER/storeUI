doctype html
html
	head
		title storeUI Demo - Landing
		
		meta(charset="UTF-8")
		meta(name="viewport", content="width=device-width,user-scalable=no,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0")
		
		link(rel="stylesheet", href="../../lib/css/swiper.min.css")
		link(rel="stylesheet", href="../css/storeUI-1.0.css")
	body
		.collection-view
			.horizontal-collection-view-cell.swiper-container#editorialCard
				.swiper-wrapper
					each _ in Array(6)
						.editorial-card.swiper-slide
							p.caption-label Header
							p.title-label App Name
							p.subtitle-label App Description
							
							.artwork-view
								.shadow-view
								img(src="https://via.placeholder.com/384x247")
								.border-view
			.title-header-view
				p.title-label Small Lockup
				a.header-button(href="#") Header Button
				
			.horizontal-collection-view-cell.swiper-container.margin-bottom#smallLockup
				.swiper-wrapper
					each _ in Array(12)
						.small-lockup-cell.swiper-slide
							.artwork-view
								.shadow-view
								img(src="https://via.placeholder.com/62x62")
								.border-view
							.title-container
								h4 App Name
								h6 App Description
							button.offer-button Get
			
			.title-header-view
				p.title-label Medium Lockup
			
			.horizontal-collection-view-cell.swiper-container.margin-bottom#mediumLockup
				.swiper-wrapper
					each _ in Array(8)
						.medium-lockup-cell.swiper-slide
							.artwork-view
								.shadow-view
								img(src="https://via.placeholder.com/62x62")
								.border-view
							.title-container
								h4 App Name
								h6 App Description
							button.offer-button Get
			
			.title-header-view
				p.title-label Brick
			
			.horizontal-collection-view-cell.swiper-container.margin-bottom#brick
				.swiper-wrapper
					each _ in Array(6)
						.brick-cell.swiper-slide
							.artwork-view
								.shadow-view
								img(src="https://via.placeholder.com/242x155")
								.border-view
							p.short-description-label App Description
			
			.title-header-view
				p.title-label Sticker Pack
			
			.horizontal-collection-view-cell.swiper-container.margin-bottom#stickerPack
				.swiper-wrapper
					each _ in Array(12)
						.small-lockup-cell.sticker-pack.swiper-slide
							.artwork-view
								.shadow-view
								img(src="https://via.placeholder.com/62x62")
								.border-view
							.title-container
								h4 App Name
								h6 App Description
							button.offer-button Get
			
			.title-header-view
				p.title-label Watch App
						
			.horizontal-collection-view-cell.swiper-container.margin-bottom#watchApp
				.swiper-wrapper
					each _ in Array(12)
						.small-lockup-cell.watch-app.swiper-slide
							.artwork-view
								.shadow-view
								img(src="https://via.placeholder.com/62x62")
								.border-view
							.title-container
								h4 App Name
								h6 App Description
							button.offer-button Get
			
			.title-header-view
				p.title-label Action Cells
			
			each _ in Array(3)
				.action-cell
					p.text-label Action Cell
			
			each _,i in Array(3)
				.action-cell.icon(class=i > 1 && "margin-bottom")
					.artwork-view
						.shadow-view
						img(src="https://via.placeholder.com/22x22")
						.border-view
					p.text-label Action Cell
			
			.title-header-view
				p.title-label Titled Buttons
			
			.titled-button-stack.row.no-justify.margin-bottom
				button.titled-button.column.column-12.medium-4 Button
				button.titled-button.column.column-12.medium-4(disabled) Disabled
				
		script(src="../../lib/js/swiper.min.js")
		script(src="../js/storeUI-1.0.js")
		script.
			const app = new storeUI();