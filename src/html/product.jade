doctype html
html
	head
		title storeUI Demo - Product
		
		meta(charset="UTF-8")
		meta(name="viewport", content="width=device-width,user-scalable=no,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0")
		
		link(rel="stylesheet", href="../../lib/css/swiper.min.css")
		link(rel="stylesheet", href="../css/storeUI-1.0.css")
	body
		.collection-view
			.product-lockup-cell
				.artwork-view
					.shadow-view
					img(src="https://via.placeholder.com/118x118")
					.border-view
				
				.title-container
					h4 App Name
					h6 App Description
				button.offer-button Get
				
				.product-lockup-badge-stack
					.badge-view
						p.value-label 3,9
						.review-rating-view
							each _ in Array(5)
								.review-rating-star-wrapper
									.background-fill(style="width: 16px")
									.review-rating-star
						p.caption-label 9 Wertungen
					//- .badge-view.no-padding
					//- 	.review-rating-view.not-enough-ratings
					//- 	p.caption-label Zu wenig Wertungen
						
					.badge-view
						p.value-label 1.000
						p.caption-label Downloads
			
			.product-media-cell.swiper-container#productMedia
				.swiper-wrapper
					each _ in Array(4)
						.screenshot-cell.swiper-slide
							.artwork-view
								.shadow-view
								img(src="https://via.placeholder.com/414x736")
								.border-view
						
		script(src="../../lib/js/swiper.min.js")
		script.
			let swipers = {};
			let swiperConstructors = [{
				id: "productMedia",
				options: {
					roundLengths : 'false',
					slidesPerView :'auto',
					slidesPerViewFit : false,
					spaceBetween: 32,
					breakpoints: {
						414: {
							spaceBetween: 10
						},
						768: {
							spaceBetween: 20
						},
						834: {
							spaceBetween: 22
						},
						1024: {
							spaceBetween: 30
						}
					}
				}
			}];
			
			swiperConstructors.forEach(item => {
				swipers[item["id"]] = new Swiper(document.getElementById(item["id"]), item["options"]);
			});